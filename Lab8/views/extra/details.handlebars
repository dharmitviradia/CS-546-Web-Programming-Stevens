<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>Person Found</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="/public/site.css">
    </head>
    <body>
        <section class="heading">
            <h1>Person Found</h1>
        </section>
        <section class="data">
            {{#each people}}
            <h2>{{firstName}} {{lastName}}</h2>
            <main>
                <dl>
                    <dt>ID</dt>
                         <dd>{{id}}</dd>
                    <dt>First Name</dt>
                        <dd>{{firstName}}</dd>
                    <dt>Last Name</dt>
                        <dd>{{lastName}}</dd>
                    <dt>Address</dt>
                        <dd>{{address}}</dd>
                    <dt>Zip Code</dt>
                        <dd>{{zip}}</dd>
                    <dt>Phone Number</dt>
                        <dd>{{phone}}</dd>
                    <dt>Social Security Number</dt>
                        <dd>{{ssn}}</dd>
                </dl> 
                <p>{{body}}</p>
            </main>
            {{/each}}
        </section>
    </body>
 </html> 